@model MenuSemaine_Core.Models.Plat

<div class="row">
    <div class="col-md-4">
        @using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "list-plats" }))
        {
        }
            <form asp-action="InsertPlat">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<MenuSemaine_Core.Library.TypePlat>()"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enregistrer" class="btn btn-default" />
                    <a asp-action="Index" class="btn btn-default">Annuler</a>
                </div>
            </form>
        </div>
</div>
<div class="row">
    <div class="col-md-8">
        <fieldset>
            <legend> All Plats</legend>
            <div id="list-plats">
                @await Component.InvokeAsync("ListPlats")
            </div>
        </fieldset>
    </div>
</div>